<div class="card w-100 h-100">
  <div class="card-body">
    <div class="float-end">
      <% if season.upcoming? %>
        <span class="badge bg-secondary"><%= t("activerecord.attributes.season.statuses.upcoming") %></span>
      <% end %>
      <% if season.ongoing? %>
        <span class="badge bg-primary"><%= t("activerecord.attributes.season.statuses.ongoing") %></span>
      <% end %>
      <% if season.ended? %>
        <span class="badge bg-success"><%= t("activerecord.attributes.season.statuses.ended") %></span>
      <% end %>
    </div>
    <h5 class="card-title">
      <%= season %>
    </h5>
    <p class="card-text"><%= season.suggestions.size %> <%= Movie.model_name.human(count: 2).downcase %></p>
    <div class="card-actions">
      <%= link_to t("buttons.see"), season, class: "btn btn-sm btn-primary" %>
      <%= link_to t("buttons.edit"), [:edit, season], class: "btn btn-sm btn-warning" %>
      <%= link_to t("buttons.destroy"), season, method: :delete, data: { confirm: t('alerts.please_confirm') }, class: "btn btn-sm btn-danger" %>
    </div>
  </div>
</div>