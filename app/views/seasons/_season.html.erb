<div class="card w-100">
  <div class="card-body">
    <h5 class="card-title"><%= season %></h5>
    <p class="card-text">TODO : X films</p>
    <div class="card-actions">
      <%= link_to t("buttons.see"), season, class: "btn btn-sm btn-primary" %>
      <%= link_to t("buttons.edit"), [:edit, season], class: "btn btn-sm btn-warning" %>
      <%= link_to t("buttons.destroy"), season, method: :delete, data: { confirm: t('please_confirm') }, class: "btn btn-sm btn-danger" %>
    </div>
  </div>
</div>