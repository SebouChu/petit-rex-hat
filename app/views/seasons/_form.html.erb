<%= simple_form_for season do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="row">
    <div class="col-md-4">
      <%= f.input :name %>
      <%= f.input :status, collection: Season.statuses.keys.map { |status| [t("activerecord.attributes.season.statuses.#{status}"), status] }, include_blank: false %>
      <%= f.input :god_mode %>
    </div>
  </div>
  <%= f.submit t('buttons.save'), class: "btn btn-primary" %>
<% end %>